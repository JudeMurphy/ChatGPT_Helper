{
    "manifest_version": 2,
    "name": "ChatGPT Helper",
    "version": "2.0",
    "description": "An extension to help you use ChatGPT",
    "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*", "contextMenus"],
    "background": {
        "scripts": ["main.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "ChatGPT Helper",
        "default_popup": "popup.html",
        "icons": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
}

{
    "manifest_version": 2,
    "name": "ChatGPT Helper",
    "version": "2.0",
    "description": "An extension to help you use ChatGPT",
    "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*", "contextMenus"],
    "background": {
        "scripts": ["main.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "ChatGPT Helper",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}

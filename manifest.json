{
    "manifest_version": 2,
    "name": "ChatGPT Helper",
    "version": "2.0",
    "description": "An extension to help you use ChatGPT",
    "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*", "contextMenus"],
    "background": {
        "scripts": ["main.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "ChatGPT Helper",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "scripts": ["main.js"],
        "persistent": true
    },
    "permissions": ["storage", "contextMenus", "activeTab"],
    "browser_action": {
        "default_title": "ChatGPT Helper",
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "contextMenus": {
        "id": "ChatGPT",
        "title": "ChatGPT Helper",
        "contexts": ["selection"],
        "icons": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
